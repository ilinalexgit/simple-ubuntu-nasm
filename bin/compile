#!/bin/sh

build_dir=$1
cache_dir=$2
env_dir=$3

vendor_dir="$build_dir/node_modules/mozjpeg/vendor"

echo "-----> Installing NASM $VERSION"

NVERSION="2.11"
curl https://www.nasm.us/pub/nasm/releasebuilds/$NVERSION/nasm-$NVERSION.tar.gz -s | tar xz
cd nasm-$NVERSION
./configure >/dev/null 2>&1 && make >/dev/null 2>&1 && make install >/dev/null 2>&1

mkdir -p $vendor_dir
mv nasm $vendor_dir
chmod +x $vendor_dir/*

PATH=$PATH:$vendor_dir

echo "-----> TEST $PATH"
echo "-----> TEST $cache_dir"
echo "-----> TEST $build_dir"
nasm -v
echo "-----> TEST END"

exit 0

 
